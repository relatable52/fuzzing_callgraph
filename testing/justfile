set shell := ["bash", "-uc"]

run_select:
    TO_RUN="projects/to_run.txt"; [ -f "$TO_RUN" ] && while IFS= read -r program || [[ -n "$program" ]]; do program=$(echo "$program" | tr -d '\r'); [[ -z "$program" ]] || just --dotenv-path "$program/.env" projects/run_complete; done < "$TO_RUN" || echo "Error: $TO_RUN not found!"

